<%- include('partials/header') -%>
<div class="container mt-2">
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label class="form-label" for="postTitle">Title:</label>
      <input
        type="text"
        class="form-control"
        id="postTitle"
        name="postTitle"
        required
      />
    </div>
    <div class="form-group">
      <label class="form-label mt-2" for="postBody">Post:</label>
      <textarea
        class="form-control"
        id="postBody"
        name="postBody"
        rows="3"
        required
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Publish</button>
  </form>
</div>

<%- include('partials/footer') -%>
